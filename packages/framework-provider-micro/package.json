{
  "name": "@advantitge/booster-framework-provider-micro",
  "version": "0.1.14",
  "description": "Run Booster with Micro and MongoDB. Can be used to link the Booster API as a Next.js API route.",
  "keywords": [
    "framework-provider-micro"
  ],
  "author": "advantitge",
  "homepage": "https://advantitge.com",
  "license": "Apache-2.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/advantitge/booster.git"
  },
  "scripts": {
    "format": "prettier --write --ext '.js,.ts' **/*.ts **/*/*.ts",
    "lint:check": "eslint --ext '.js,.ts' **/*.ts",
    "lint:fix": "eslint --quiet --fix --ext '.js,.ts' **/*.ts",
    "compile": "tsc -b tsconfig.json",
    "clean": "rimraf ./dist tsconfig.tsbuildinfo",
    "build": "yarn clean && yarn compile",
    "prepack": "tsc -b tsconfig.json",
    "test": "BOOSTER_ENV=test nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\""
  },
  "bugs": {
    "url": "https://github.com/boostercloud/booster/issues"
  },
  "dependencies": {
    "@boostercloud/framework-common-helpers": "^0.21.1",
    "@boostercloud/framework-core": "^0.21.1",
    "@boostercloud/framework-types": "^0.21.1",
    "cookie": "0.4.1",
    "micro": "9.3.4",
    "micro-cors": "0.1.1",
    "mocha": "8.4.0",
    "mongodb": "4.0.1",
    "tslib": "2.3.0"
  },
  "devDependencies": {
    "@types/chai-as-promised": "7.1.4",
    "@types/cookie": "0.4.1",
    "@types/faker": "5.1.5",
    "@types/micro": "7.3.4",
    "@types/micro-cors": "0.1.2",
    "@types/mocha": "8.2.2",
    "@types/sinon": "10.0.0",
    "@types/sinon-chai": "3.2.5",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "faker": "5.1.0",
    "node-mocks-http": "1.10.1",
    "nyc": "15.1.0",
    "sinon": "9.2.3",
    "sinon-chai": "3.5.0"
  }
}
